<div class="container mt-4">
    <h2>Edit Quote</h2>
    <form action="/admin/quote/edit/<%= quote.id %>" method="POST">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" value="<%= quote.name %>" required>
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input type="tel" class="form-control" name="phone" value="<%= quote.phone %>" required>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email" value="<%= quote.email %>" required>
        </div>
        <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" name="address" value="<%= quote.address %>" required>
        </div>
        <div class="form-group">
            <label>Service Type</label>
            <select class="form-control" name="service_type" required>
                <option value="regular" <%= quote.service_type === 'regular' ? 'selected' : '' %>>Regular Cleaning</option>
                <option value="deep" <%= quote.service_type === 'deep' ? 'selected' : '' %>>Deep Cleaning</option>
                <option value="move" <%= quote.service_type === 'move' ? 'selected' : '' %>>Move In/Out</option>
                <option value="commercial" <%= quote.service_type === 'commercial' ? 'selected' : '' %>>Commercial</option>
                <option value="window" <%= quote.service_type === 'window' ? 'selected' : '' %>>Window Cleaning</option>
            </select>
        </div>
        <div class="form-group">
            <label>Hours</label>
            <input type="number" class="form-control" name="hours" value="<%= quote.hours %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Update Quote</button>
        <a href="/admin" class="btn btn-secondary">Cancel</a>
    </form>
</div> 