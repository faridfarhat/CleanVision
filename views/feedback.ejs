

        <div class="feedback-grid">
            <!-- Left Side: Feedback Form -->
            <div class="feedback-form-container">
                <h2>Share Your Experience</h2>
                <p class="subtitle">We value your feedback!</p>
                
                <form class="feedback-form" action="/feedback" method="POST">
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input type="text" id="name" nameloggedin: req.session.loggedIn="name" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="role">Your Role</label>
                        <input type="text" id="role" name="role" placeholder="e.g., Business Owner" required>
                    </div>

                    <div class="form-group">
                        <label for="feedback">Your Feedback</label>
                        <textarea id="feedback" name="feedback" rows="3" required></textarea>
                    </div>

                    <div class="form-group">
                        <label for="rating">Rating</label>
                        <div class="star-rating">
                            <input type="radio" id="star5" name="rating" value="5" required>
                            <label for="star5">★</label>
                            <input type="radio" id="star4" name="rating" value="4">
                            <label for="star4">★</label>
                            <input type="radio" id="star3" name="rating" value="3">
                            <label for="star3">★</label>
                            <input type="radio" id="star2" name="rating" value="2">
                            <label for="star2">★</label>
                            <input type="radio" id="star1" name="rating" value="1">
                            <label for="star1">★</label>
                        </div>
                    </div>

                    <button type="submit" class="submit-btn">Submit Feedback</button>
                </form>
            </div>

            <!-- Right Side: Testimonials -->
            <div class="testimonial-box">
                <div class="quote-icon">❝</div>
                
                <div class="testimonial-content">
                    <% if (feedback_data.length > 0) { %>
                        <% feedback_data.forEach(function(fd) { %>
                            <div class="quote <%= fd.active ? 'active' : '' %>">
                                <%= fd.feedback %>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="quote">
                            No testimonials available at this time.
                        </div>
                    <% } %>
                </div>
                
                <div class="client-details">
                    <% if (feedback_data.length > 0) { %>
                        <% feedback_data.forEach(function(fd) { %>
                            <div class="client <%= fd.active ? 'active' : '' %>">
                                <div class="client-info">
                                    <div class="name"><%= fd.name %></div>
                                    <div class="role"><%= fd.role %></div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="client">
                            <div class="client-info">
                                <div class="name">No clients available.</div>
                                <div class="role"></div>
                            </div>
                        </div>
                    <% } %>
                </div>
                
                <div class="slider-controls">
                    <div class="line-indicators">
                        <% if (feedback_data.length > 0) { %>
                            <% feedback_data.forEach((_, index) => { %>
                                <div class="line <%= index === 0 ? 'active' : '' %>"></div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>


        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>role</th>
                    <th>feedback</th>
                    <th>rating</th>
                </tr>
            </thead>
            <tbody>
                <% feedback_data.forEach(function(fd) { %>
                    <tr>
                        <td><%= fd.name %></td>
                        <td><%= fd.role %></td>
                        <td><%= fd.feedback %></td>
                        <td><%= fd.rating %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Bootstrap Carousel for Feedback -->
        <div id="feedbackCarousel" class="carousel slide mt-5" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% for(let i = 0; i < feedback_data.length || i<=5; i++) { %>
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <div class="table-responsive">
                            <div style="position: relative;">
                                <div style="position: absolute; top: 0; right: 0;">
                                    <% for (let j = 0; j < feedback_data[i].rating; j++) { %>
                                        ★
                                    <% } %>
                                </div>
                                <div><%= feedback_data[i].feedback %></div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#feedbackCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#feedbackCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>


<style>
