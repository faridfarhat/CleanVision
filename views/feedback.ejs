<script>
document.addEventListener('DOMContentLoaded', function() {
    const quotes = document.querySelectorAll('.quote');
    const clients = document.querySelectorAll('.client');
    const lines = document.querySelectorAll('.line');
    let currentIndex = 0;

    function updateTestimonial(index) {
        // Remove active classes
        document.querySelector('.quote.active').classList.remove('active');
        document.querySelector('.client.active').classList.remove('active');
        document.querySelector('.line.active').classList.remove('active');
        
        // Add active classes to new elements
        quotes[index].classList.add('active');
        clients[index].classList.add('active');
        lines[index].classList.add('active');
    }

    // Add click events to lines
    lines.forEach((line, index) => {
        line.addEventListener('click', () => {
            currentIndex = index;
            updateTestimonial(currentIndex);
        });
    });

    // Auto rotate
    setInterval(() => {
        currentIndex = (currentIndex + 1) % quotes.length;
        updateTestimonial(currentIndex);
    }, 4000);
});
</script>