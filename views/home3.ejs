<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header1.ejs') %>
    <title>CleanVision | Professional Cleaning Services</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary: #007bff;
            --secondary: #6c757d;
            --accent: #28a745;
            --dark: #343a40;
            --light: #f8f9fa;
            --white: #ffffff;
        }

        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            line-height: 1.6;
            color: var(--dark);
            overflow-x: hidden;
        }

        /* Main Banner */
        .main-banner {
            position: relative;
            height: 100vh;
            background: url('/images/clean-home.jpg') no-repeat center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: var(--white);
            overflow: hidden;
        }

        .banner-content {
            z-index: 2;
            padding: 0 20px;
            animation: fadeIn 1s ease;
        }

        .banner-title {
            font-size: 3.5rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .banner-subtitle {
            font-size: 1.5rem;
            margin-bottom: 30px;
        }

        /* Section Styles */
        section {
            padding: 80px 0;
            opacity: 0;
            transform: translateY(50px);
            transition: opacity 0.5s ease, transform 0.5s ease;
            position: relative;
            overflow: hidden;
        }

        section.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Services Section */
        .services-section {
            background: var(--light);
            text-align: center;
        }

        .service-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .service-card {
            background: var(--white);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
            opacity: 0;
            transform: translateY(20px);
            animation: slideIn 0.5s forwards;
        }

        .service-card:hover {
            transform: translateY(-5px);
        }

        .service-title {
            font-size: 1.5rem;
            color: var(--primary);
            margin-bottom: 10px;
        }

        /* Why Choose Us Section */
        .why-choose-us {
            background: var(--white);
            text-align: center;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .feature-box {
            background: #e8f0f5;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
            opacity: 0;
            transform: translateY(20px);
            animation: slideIn 0.5s forwards;
        }

        .feature-box:hover {
            transform: translateY(-5px);
        }

        .feature-icon {
            font-size: 40px;
            color: var(--primary);
            margin-bottom: 10px;
        }

        /* Feedback Section */
        .feedback-section {
            background: var(--light);
            text-align: center;
        }

        .testimonial-box {
            background-color: #e8f0f5;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            position: relative;
        }

        .quote-icon {
            font-size: 60px;
            color: var(--primary);
            line-height: 1;
            margin-bottom: 20px;
        }

        .testimonial-content {
            position: relative;
            height: 120px;
            margin-bottom: 30px;
        }

        .quote {
            position: absolute;
            width: 100%;
            font-size: 20px;
            line-height: 1.6;
            color: #333;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

        .quote.active {
            opacity: 1;
            transform: translateY(0);
        }

        /* Contact Us Section */
        .contact-us {
            text-align: center;
            padding: 80px 0;
        }

        /* Animation Keyframes */
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .banner-title {
                font-size: 2.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Main Banner -->
    <header class="main-banner">
        <div class="banner-content">
            <h1 class="banner-title">Your Trusted Cleaning Partner</h1>
            <p class="banner-subtitle">Experience a spotless home with our professional cleaning services.</p>
        </div>
    </header>

    <!-- Services Section -->
    <section class="services-section" id="services">
        <h2>Our Cleaning Services</h2>
        <div class="service-grid">
            <div class="service-card">
                <h3 class="service-title">Residential Cleaning</h3>
                <p class="service-description">Keep your home spotless with our comprehensive residential cleaning services.</p>
            </div>
            <div class="service-card">
                <h3 class="service-title">Commercial Cleaning</h3>
                <p class="service-description">Professional cleaning services for offices and commercial spaces.</p>
            </div>
            <div class="service-card">
                <h3 class="service-title">Deep Cleaning</h3>
                <p class="service-description">Thorough cleaning for a fresh start in your home or office.</p>
            </div>
            <div class="service-card">
                <h3 class="service-title">Move In/Out Cleaning</h3>
                <p class="service-description">Ensure a clean transition with our move in/out cleaning services.</p>
            </div>
        </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="why-choose-us" id="why-choose-us">
        <h2>Why Choose CleanVision?</h2>
        <div class="features-grid">
            <div class="feature-box">
                <div class="feature-icon"><i class="fas fa-shield-alt"></i></div>
                <h3>Trusted Professionals</h3>
                <p>Our team is fully trained, insured, and background-checked.</p>
            </div>
            <div class="feature-box">
                <div class="feature-icon"><i class="fas fa-clock"></i></div>
                <h3>Flexible Scheduling</h3>
                <p>We work around your schedule to provide convenient cleaning services.</p>
            </div>
            <div class="feature-box">
                <div class="feature-icon"><i class="fas fa-thumbs-up"></i></div>
                <h3>100% Satisfaction Guarantee</h3>
                <p>Your satisfaction is our priority. We guarantee our work.</p>
            </div>
            <div class="feature-box">
                <div class="feature-icon"><i class="fas fa-leaf"></i></div>
                <h3>Eco-Friendly Products</h3>
                <p>We use environmentally friendly cleaning products for a safe clean.</p>
            </div>
        </div>
    </section>

    <!-- Feedback Section -->
    <section class="feedback-section" id="feedback">
        <h2>What Our Clients Say</h2>
        <div class="testimonial-box">
            <div class="quote-icon">‚ùù</div>
            <div class="testimonial-content">
                <div class="quote active">
                    Clean Vision has exceeded all our expectations. The level of cleanliness they maintain is exceptional.
                </div>
                <div class="quote">
                    Professional, reliable, and thorough. Best cleaning service we've ever used.
                </div>
                <div class="quote">
                    Their attention to detail is remarkable. Our office has never looked better.
                </div>
            </div>
            <div class="client-details">
                <div class="client active">
                    <div class="client-info">
                        <div class="name">Sarah Johnson</div>
                        <div class="role">Business Owner</div>
                    </div>
                </div>
                <div class="client">
                    <div class="client-info">
                        <div class="name">Michael Chen</div>
                        <div class="role">Restaurant Manager</div>
                    </div>
                </div>
                <div class="client">
                    <div class="client-info">
                        <div class="name">Emma Wilson</div>
                        <div class="role">Office Manager</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Us Section -->
    <section class="contact-us" id="contact-us">
        <h2>Contact Us</h2>
        <p>If you have any questions or would like to get in touch, feel free to reach out!</p>
        <a href="/contact" class="quote-button">Contact Us</a>
    </section>

    <a href="/quote" class="quote-button">Get a Quote</a>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sections = document.querySelectorAll('section');
            const quotes = document.querySelectorAll('.quote');
            const clients = document.querySelectorAll('.client');
            let currentIndex = 0;

            // Function to handle section visibility on scroll
            const handleScroll = () => {
                sections.forEach(section => {
                    const rect = section.getBoundingClientRect();
                    if (rect.top < window.innerHeight && rect.bottom > 0) {
                        section.classList.add('visible');
                    }
                });
            };

            // Initial call to handleScroll
            handleScroll();
            window.addEventListener('scroll', handleScroll);

            // Function to update testimonials
            function updateTestimonial(index) {
                // Remove active classes
                document.querySelector('.quote.active').classList.remove('active');
                document.querySelector('.client.active').classList.remove('active');
                
                // Add active classes to new elements
                quotes[index].classList.add('active');
                clients[index].classList.add('active');
            }

            // Auto rotate testimonials
            setInterval(() => {
                currentIndex = (currentIndex + 1) % quotes.length;
                updateTestimonial(currentIndex);
            }, 4000);
        });
    </script>
</body>
</html>
